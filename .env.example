# ─── Clawby — Environment Variables ───
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.

# Telegram Bot API token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API key
MODEL_API_KEY=your_gemini_api_key_here

# Your Telegram user ID (numeric). Only this user can talk to the bot.
# Send /start to @userinfobot on Telegram to find your ID.
TELEGRAM_ALLOWLIST_USER_ID=your_telegram_user_id_here

# ─── Voice Messages (Optional) ───
TRANSCRIPTION_API_KEY=
TRANSCRIPTION_MOCK=false

# ─── Text-to-Speech (Optional) ───
TTS_API_KEY=

# ─── Memory (Optional) ───
VECTOR_DB_API_KEY=
VECTOR_DB_INDEX=
MEMORY_MOCK=false

# ─── MCP / Google Workspace (Optional) ───
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
MCP_ALLOWED_TOOLS=

# ─── External APIs (All Optional) ───
GITHUB_TOKEN=your_github_token_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
TODOIST_API_KEY=your_todoist_api_key_here
EXCHANGERATE_API_KEY=your_exchangerate_api_key_here
NEWS_API_KEY=your_newsapi_key_here
GNEWS_API_KEY=
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_READ_ACCESS_KEY=your_tmdb_read_access_key_here
WOLFRAM_APP_ID=
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
# Run: npx tsx scripts/spotify-auth.ts  to obtain this token
SPOTIFY_REFRESH_TOKEN=
RAPIDAPI_KEY=your_rapidapi_key_here
GOOGLE_API_KEY=
# Run: npx tsx scripts/google-auth.ts  to obtain this token
GOOGLE_CALENDAR_REFRESH_TOKEN=

# ─── Heartbeat (Optional) ───
HEARTBEAT_ENABLED=true
HEARTBEAT_CRON=0 8 * * *